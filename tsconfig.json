{
  "compilerOptions": {
    "baseUrl": "./",
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "declaration": true,
    "lib": ["ES2020"],
    "outDir": "./lib",
    "strict": true,
    "typeRoots": [
      "./node_modules/@types",
      "./types"
    ]
  },
  "include": ["./src/**/*.ts"],
  "exclude": ["./node_modules", "./src/**/*.spec.ts"]
}